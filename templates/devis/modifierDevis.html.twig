{% extends 'base.html.twig' %}

{% block title %}Modification d'un devis{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/sidebar.css') }}">
{% endblock %}

{% block body %}
{% include 'sidebar.html.twig' %}
<h2>Modification d'un devis</h2>
<a href="{{url('app_devis')}}"><button type="button" class="btn rounded-pill btn-success">Retour</button></a>
<div class="form-horizontal">
    {{ form_start(form) }}
        <div class="form-group">
            <label class="control-label col-sm-2" for="id_commanditaire">Commanditaire :</label>
            <div class="col-sm-10">
                {{ form_widget(form.id_commanditaire, {'attr': {'class': 'form-control', 'type':'text', 'placeholder':'Commanditaire'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nom :</label>
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'type':'text', 'placeholder':'Nom'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="prix">Prix :</label>
            <div class="col-sm-10">
                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'type':'number', 'placeholder':'Prix'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="date">Date :</label>
            <div class="col-sm-10">
                {{ form_widget(form.date, {'attr': {'class': 'form-control', 'type':'date'}}) }}
            </div>
        </div>
        <div class="form-group button">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" name="modifier" class="btn btn-primary">Modifier</button>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}